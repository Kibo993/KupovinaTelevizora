package com.sample

import com.sample.Televizor;
import com.sample.Enums.*;
 
rule "Nema novca za smart televizor"
no-loop
salience 10
    when
        tv : Televizor(cena<20000)
    then
        //System.out.println( mojaCena );
        tv.setSmart(false);
        update( tv );
end

rule "test"
no-loop 
salience 1
    when
        tv : Televizor( nacinPrijema  == NacinPrijema.KABLOVSKA, smart !=false )
    then
    tv.setSmart(true);
System.out.println("TEST: "+tv.getNeklasicanSadrzaj());
end

rule "Dovoljan je analogni tjuner za kablovsku"
no-loop 
    when
        tv : Televizor(prijemKablovska == PrijemKablovska.SETTOPBOX || prijemKablovska == PrijemKablovska.ANALOGNA, sekundarniPrijem == false, noveMogucnosti == false )
    then
		tv.setTuner(Tuner.ANALOGNI);
end
